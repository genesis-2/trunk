<?xml version="1.0" encoding="utf-8"?>
<wsdl:definitions name="GeniiResourceLifetime"
	xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:wsa="http://www.w3.org/2005/08/addressing"
    xmlns:genii-rlife="http://vcgr.cs.virginia.edu/genii/2006/12/resource-lifetime"
    xmlns:genii-resource="http://vcgr.cs.virginia.edu/genii/2006/12/resource"
    targetNamespace="http://vcgr.cs.virginia.edu/genii/2006/12/resource-lifetime">

	<wsdl:import
		namespace="http://vcgr.cs.virginia.edu/genii/2006/12/resource"
		location="./resource.wsdl"/>
		
<!-- ===== Types Definitions ==== -->
    <wsdl:types>

        <xsd:schema
            targetNamespace="http://vcgr.cs.virginia.edu/genii/2006/12/resource-lifetime"
            elementFormDefault="qualified"
            attributeFormDefault="unqualified">

            <xsd:import
            	namespace="http://www.w3.org/2005/08/addressing"
            	schemaLocation="./ws-addr.xsd"/>

<!-- Message Helper Types -->
			<xsd:element name="immediateTerminate"/>
			<xsd:element name="immediateTerminateResponse"/>

        </xsd:schema>
    </wsdl:types>

	<!-- Lifetime -->
	<wsdl:message name="immediateTerminateRequest">
		<wsdl:part name="immedateTerminateRequest"
			element="genii-rlife:immediateTerminate"/>
	</wsdl:message>

	<wsdl:message name="immediateTerminateResponse">
		<wsdl:part name="immedateTerminateResponse"
			element="genii-rlife:immediateTerminateResponse"/>
	</wsdl:message>

	<!-- Port Type Definitions -->
	<wsdl:portType name="GeniiResourceLifetime">

		<wsdl:operation name="immediateTerminate">
			<wsdl:input message="genii-rlife:immediateTerminateRequest"/>
			<wsdl:output message="genii-rlife:immediateTerminateResponse"/>
        	<wsdl:fault name="ResourceUnknownFault"
            	message="genii-resource:ResourceUnknownFault"/>
		</wsdl:operation>
	</wsdl:portType>

</wsdl:definitions>
